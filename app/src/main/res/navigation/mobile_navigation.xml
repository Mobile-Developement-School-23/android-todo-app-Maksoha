<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/myToDoListFragment">

    <fragment
        android:id="@+id/myToDoListFragment"
        android:name="com.example.todoapp.ui.view.TasksListFragment"
        android:label="fragment_my_to_do_list"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_myToDoListFragment_to_addToDoItemFragment"
            app:destination="@id/addToDoItemFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"/>
        <action
            android:id="@+id/action_myToDoListFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"/>
    </fragment>
    <fragment
        android:id="@+id/addToDoItemFragment"
        android:name="com.example.todoapp.ui.screens.taskEdit_screen.TaskEditFragment"
        android:label="fragment_add_to_do_item"
        tools:layout="@layout/fragment_item" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.todoapp.ui.screens.setting_screen.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>